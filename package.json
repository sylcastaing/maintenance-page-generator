{
  "name": "maintenance-page-generator",
  "version": "0.1.0",
  "description": "Maintenance page generator",
  "main": "./lib/index.js",
  "bin": {
    "maintenance-page-generator": "./lib/index.js",
    "mpg": "./lib/index.js"
  },
  "scripts": {
    "start": "tsnd --respawn --no-notify src/index.ts",
    "test": "npm run build && npm i -g && maintenance-page-generator",
    "build": "tsc --skipLibCheck -p .",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src/**/*.ts --max-warnings=0",
    "lint:fix": "eslint src/**/*.ts --max-warnings=0 --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sylcastaing/maintenance-page-generator.git"
  },
  "author": "Sylvain Castaing",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sylcastaing/maintenance-page-generator/issues"
  },
  "homepage": "https://github.com/sylcastaing/maintenance-page-generator#readme",
  "dependencies": {
    "chalk": "3.0.0",
    "figlet": "1.2.4",
    "fp-ts": "2.2.0",
    "fp-ts-contrib": "^0.1.7",
    "inquirer": "7.0.0",
    "mime-types": "2.1.25",
    "ora": "4.0.3",
    "pug": "2.0.4",
    "yup": "0.27.0"
  },
  "devDependencies": {
    "@types/figlet": "1.2.0",
    "@types/inquirer": "6.5.0",
    "@types/mime-types": "2.1.0",
    "@types/node": "12.12.14",
    "@types/pug": "2.0.4",
    "@types/yup": "0.26.26",
    "@typescript-eslint/eslint-plugin": "2.10.0",
    "@typescript-eslint/parser": "2.10.0",
    "eslint": "6.7.2",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "npm run lint:fix",
      "git add"
    ]
  }
}
