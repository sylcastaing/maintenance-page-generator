{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "incremental": true,
    "lib": ["es2017"],
    "removeComments": true,
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "exclude": ["node_modules", "lib"]
}